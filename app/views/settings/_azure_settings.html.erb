<%= stylesheet_link_tag 'plugin_settings', :plugin => 'redmine_omniauth_azure' %>
<p>
  <label>Client ID</label>
  <%= text_field_tag 'settings[client_id]', @settings['client_id'], class: 'plugin-settings-input' %>
</p>
<p>
  <label>Client Secret</label>
  <%= text_field_tag 'settings[client_secret]', @settings['client_secret'], class: 'plugin-settings-input' %>
</p>
<p>
  <label>Tenant ID</label>
  <%= text_field_tag 'settings[tenant_id]', @settings['tenant_id'], class: 'plugin-settings-input' %>
</p>
<p>
  <label>Allowed Domains (one per line)</label>
  <%= text_area_tag "settings[allowed_domains]", @settings['allowed_domains'], :rows => 5 %>
</p>
<p>
  <label>Enable OAuth Authentication</label>
  <%= check_box_tag "settings[azure_oauth_authentication]", true, @settings['azure_oauth_authentication'], class: 'plugin-settings-checkbox' %>
</p>
